//start  function of Add_info_of_product

mixin Add_or_update_product(btn_name)
    .form_Add_product(id = "Add_product") 
        form(action="")
            .form-row
                .form-group.col-md-4
                    label   اسم المنتج :
                    input.form-control.form_acion(type='text' required placeholder="اسم المنتج ")
                
                .form-group.col-md-4
                    label تحديد الفرع
                    select.part_company.form_acion 
                        option(value="1")
                        option(value="2")
                        option(value="3")
            
            .form-group.col-md-6
                label  تفاصيل عن المنتج :
                textarea.form-control.form_acion(rows='2' placeholder=" اكتب هنا...")
            br
            // start row of info of price             
            .form-group.col-md-12  
                label.form-contro-label   تفاصيل سعر المنتج : 
            .form-row
                .form-group.col-md-4
                    input.form-control.form_acion(type='text' required placeholder=" سعر المنتج ")
                .clearfix

                .form-group.col-md-4
                    input.form-control.form_acion(type='text' required placeholder=" خصم %20 ")
                .clearfix
            // end row of info of price    
                
            // start product status
            br
            
            .form-row
                //  product status
                .form-group.col-md-4
                    label حالة المنتج 
                    select.part_company.form_acion 
                        option(value="old")  سلعة قديمة 
                        option(value="new") سلعة جديدة

                // color of product
                .form-group.col-md-4.form_color
                    label.form-control-label اللون :
                    input.form-control.form_acion(type='text' required placeholder=" لون المنتج")    
            

            .form-row
                // delivery time
                .form-group.col-md-4
                    label.form-control-label مدة التوصيل :
                    br
                    select.select_delivery.form_acion
                        option يوم 
                        option يومين
                        - for (var i = 3 ; i < 8; i++)
                            option #{i} أيام       

                // notes form seller
                .form-group.col-md-4
                    label.form-control-label ملاحظة البائع :
                    input.form-control.form_acion(type='text' required placeholder="  ملاحظة البائع")
                
            button.btn.btn_form(type='button') #{btn_name}
            button.btn.btn_user_form_close(type="button")  رجوع

// end function of add_info_of_product

