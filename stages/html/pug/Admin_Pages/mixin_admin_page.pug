// start form of adding new address 

mixin form_address(form_header , button_value , form_id)   
    .form_address(class = form_id) 
        form(action="")
            hr
            h4 #{form_header}
            .form-row
                // start name
                .form-group.col-md-4
                    label الإسم الاول*
                    input.form-control.form_acion(type='text' required placeholder="الاسم الاول")
                .form-group.col-md-4
                    label أسم العائلة*
                    input.form-control.form_acion(type='text' required placeholder="اسم العائله")
                // end name    
                
                
                // start address
                .form-group.col-md-6
                    label المحافظة*
                    input.form-control.form_acion(type='text' required placeholder=" المحافظه")
                .clearfix 
                .form-row
                    .form-group.col-md-4
                        label المدينة*
                        input.form-control.form_acion(type='text' required placeholder=" المدينة")
                    .form-group.col-md-4
                        label المنطقة* 
                        select.form-control.form_acion
                            option(selected='') اختار...
                            option ...
                    .form-group.col-md-2
                        label رقم الشارع*
                        input.form-control.form_acion(type='text' required placeholder="55")
                    // end  address 

                .clearfix
                
                // start phone number
                .form-group.col-md-12
                    label رقم الهاتف الجوال*
                .clearfix    
                .form-row
                    .form-group.col-xs-3
                        label: p.phone_num +20
                    .form-group.col-xs-6
                        input.form-control.form_acion(type='phone' required placeholder=" 01156819426")
                // end phone number

            button.btn.btn_form.btn-lg(type='button') #{button_value}
            button.btn.btn_user_form_close(type="button" value=form_id)  رجوع

        
            

// start  function of form_edit_account

mixin form_edit_account   
    .form_edit_account(id = "edit_accont") 
        hr
        h4 تعديل البيانات
        form(action="password_confirm.html")
            .form-row
                .form-group.col-md-6
                    input.form-control.form_acion(type='text' required placeholder="الأسم ")
                .clearfix

                .form-group.col-md-6
                    input.form-control.form_acion(type='password' required placeholder="الباسورد")
                .clearfix

            button.btn.btn_form.btn-lg.btn-check-password(type='submit') تعديل
            button.btn.btn_user_form_close(type="button" value="edit_accont")  رجوع

// end  function of form_edit_account

