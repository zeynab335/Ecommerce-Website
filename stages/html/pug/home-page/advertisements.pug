
.Adevertis
    .container
        .row
            .col-lg-8.col-sm-6.right-adevertis.animation.right
                // start carousel
                #right-advertis.carousel.slide(data-ride="carousel")
                
                    .carousel-inner
                        .carousel-item.animation.right.active
                            img.w-100.carousel-image(src="../images/advr1.jpeg" alt="...")

                        .carousel-item.animation.right
                            img.d-block.w-100.carousel-image(src="../images/advr4.jpeg" alt="...")
                        
                        .carousel-item.animation.right
                            img.d-block.w-100.carousel-image(src="../images/advr3.jpeg" alt="...")    
                    
                    // start carousel control        
                    a.carousel-control-prev(href="#right-advertis" role="button" data-slide="prev")
                        span.carousel-control-prev-icon(aria-hidden="true")
                        span.sr-only Previous
                    a.carousel-control-next(href="#right-advertis" role="button" data-slide="next")
                        span.carousel-control-next-icon(aria-hidden="true")
                        span.sr-only Next
                    // end carousel control  
                    
                    // start carousel indicators
                    ol.carousel-indicators
                        li.active(data-target="#right-advertis" data-slide-to="0")
                        li(data-target="#right-advertis" data-slide-to="1")
                        li(data-target="#right-advertis" data-slide-to="2")

                    // end carousel indicators
            
            // end right-adevertis

            // start left-adevertis        
            .col-lg-4.col-sm-6.left-adevertis.animation.left
                img(src="../images/advr2.jpeg", alt="")
            // end left-adevertis
            .clearfix
.clearfix            
