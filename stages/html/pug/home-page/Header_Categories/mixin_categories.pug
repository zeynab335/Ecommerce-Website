// start show-kinds-oneCategory
mixin show-kinds-oneCategory(image_src,image_name,category_name)
    .col-lg.col-md-5.col-xs-12.show_kind-col
        .image_src
            img(src=image_src)
        .clearfix
        .image_name
            h4.category_kind_name(class=category_name) #{image_name}
    .clearfix        
// end show-kinds-oneCategory


