// start show information of all kinds of ele categoriy
mixin category_showInfo(category_id , category_kind_header , category_array_info )
    .category_showInfo.animation.right(id=category_id)
        .container
            .row
                .category_showInfo_header
                    hr.right
                    h2  #{category_kind_header}
                    hr.left
                each item in category_array_info
                    .col-lg-4.col-sm-6.category_showInfo_col
                        .category_showInfo_image
                            .show_product
                                p.text-center: a(href="show_product.html")  عرض المنتج
                            img(src=item[0], alt="")
                        .clearfix  
                        
                        .category_showInfo_information
                            p.lead #{item[1]}
                            p.lead.before_Discount السعر: #{item[2]}
                            p.lead.after_Discount السعر بعد الخصم: #{item[3]} 
                        .clearfix  
                        br

                        // start evaluate product 
                        .evaluate_product
                            i.far.fa-star
                            i.far.fa-star
                            i.far.fa-star
                            i.far.fa-star

                        // end evaluate product

                        .category_showInfo_card
                            button.btn
                                a(href= "card.html")  اضافة الي العربة
                    .clearfix 
// end show information of all kinds of ele categoriy



